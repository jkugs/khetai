# Compiler settings
CC = gcc
CFLAGS = -std=c11 -fPIC -O3

# Source directory
SRC_DIR = ../../

# Build directory
BUILD_DIR = build_khetai

# Source files
SRC = $(SRC_DIR)khetai_lib.c

# Object files
OBJ = $(BUILD_DIR)/khetai_lib.o

# Library name
LIB = libkhetai.so

# Default target
all: $(BUILD_DIR) $(LIB)

# Create the build directory
$(BUILD_DIR):
	mkdir -p $(BUILD_DIR)

# Compile the library
$(LIB): $(OBJ)
	$(CC) -shared -o $@ $^ $(CFLAGS)

# Compile C source files into object files
$(BUILD_DIR)/%.o: $(SRC_DIR)%.c
	$(CC) -c $< -o $@ $(CFLAGS)

# Clean target
clean:
	rm -f $(OBJ) $(LIB)
	rm -rf $(BUILD_DIR)

.PHONY: all clean